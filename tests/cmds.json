            "exec": {
                "parameters": [
                    {"name": "login", "type": "string", "default": "different_host_name"},
                    {"name": "port", "type": "int", "default": "5522"}
                ],
                "command": "{{login}} {{scancel}} {{squeue}}"
            },
            "output": {
                "type":"regex/string",
                "value": "(vim)"
            },
            "async": false,
            "failFatal": true,
            "formatFatal": false,
            "host": "{{ local }}",
            "port": "{{ port }}",
            "requireMatch": true
        }
    ]
