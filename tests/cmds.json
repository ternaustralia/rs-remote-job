        },
        {
            "name": "test_command",
            "httpMethod": "GET",
            "exec": {
                "parameters": [
                    {"name": "file", "type": "string", "default": "vim"},
                    {"name": "local", "type": "string", "default": "localhost"},
                    {"name": "nnp", "type": "int", "default": "2"}
                ],
