            "formatFatal": false,
            "host": "{{ local }}",
            "port": "{{ port }}",
            "requireMatch": true
        },
        {
            "name": "test_post_command",
            "httpMethod": "POST",
            "exec": {
                "parameters": [
                    {"name": "file", "type": "string", "default": "vim-yong"}
                ],
                "command": "ls -la ~/ | grep {{file}}"
            },
            "output": {
                "type":"regex/string",
